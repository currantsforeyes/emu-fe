{
  "name": "emu-fe",
  "version": "1.0.0",
  "description": "Emu-FE - EmulationStation-style Frontend",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:watch\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:watch": "tsc -p tsconfig.electron.json --watch",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "electron:build:win": "npm run build && npm run build:electron && electron-builder --win",
    "electron:build:mac": "npm run build && npm run build:electron && electron-builder --mac",
    "electron:build:linux": "npm run build && npm run build:electron && electron-builder --linux"
  },
  "dependencies": {
    "@types/three": "^0.160.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^38.4.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.3.0",
    "vite": "^7.1.12",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.emufe.app",
    "productName": "Emu-FE",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
